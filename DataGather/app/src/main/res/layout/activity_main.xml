<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="548dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="38dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Filename" />

        <EditText
            android:id="@+id/fileInput"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:ems="10"
            android:hint="activity (no extension)"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text='After entering the file name, press submit and you will have three second to put the phone in your pocket. Perform your activity until you feel a second vibration. If you want to record data for 5 minutes then click the "longActivity" switch. Otherwise it will be 10 seconds.' />

        <Switch
            android:id="@+id/duration_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LongActivity" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="324dp"
            android:text="Submit" />

    </LinearLayout>

</RelativeLayout>